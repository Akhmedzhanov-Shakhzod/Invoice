<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ProductFromAddOrderBlankFragment">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/product_name_add_order"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/product_price_add_order"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>
    </LinearLayout>

    <EditText
        android:id="@+id/product_count_add_order"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

    </EditText>

    <TextView
        android:id="@+id/product_amount_add_order"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/product_count_add_order"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

    </TextView>


    <Button
        android:id="@+id/save_count_product_add_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/green_button"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_amount_add_order">

    </Button>

    <Button
        android:id="@+id/clear_product_add_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/clear"
        android:backgroundTint="@color/red_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_count_add_order" />


</androidx.constraintlayout.widget.ConstraintLayout>